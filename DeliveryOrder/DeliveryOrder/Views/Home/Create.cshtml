@model DeliveryOrder.Models.Delivery

<form asp-action="Create" method="post" class="row justify-content-center">
    <div style="width:100%">
        <div>
            <h2 class="text-primary">Создать заказ на доставку</h2>
            <hr />
        </div>

        <div class="form-group">
            <label asp-for="SenderCity">Город отправителя:</label>
            <input asp-for="SenderCity" class="form-control" style="width:60%" />
            <span asp-validation-for="SenderCity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SenderAddress">Адрес отправителя:</label>
            <input asp-for="SenderAddress" class="form-control" style="width:60%" />
            <span asp-validation-for="SenderAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RecipientCity">Город получателя:</label>
            <input asp-for="RecipientCity" class="form-control" style="width:60%" />
            <span asp-validation-for="RecipientCity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RecipientAddress">Адрес получателя:</label>
            <input asp-for="RecipientAddress" class="form-control" style="width:60%" />
            <span asp-validation-for="RecipientAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Weight" class="control-label">Вес груза:</label>
            <input asp-for="Weight" class="form-control" style="width:30%" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PickupDate">Дата забора груза:</label>
            <input asp-for="PickupDate" type="date" class="form-control" style="width:30%" />
            <span asp-validation-for="PickupDate" class="text-danger"></span>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">К списку заказов</a>
    </div>
</form>